{
  "manifest_version": 3,
  "name": "Unofficial table view for Scrappbook gallery selections",
  "version": "2.0",
  "description": "Unofficial add-on. Displays Scrappbook gallery selections in a table view. Work in progress. Not related to Scrappbook or PhotoStore24.",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://builder.scrappbook.de/*",
    "https://api.scrappbook.de/*",
    "https://images-prod-eu.photostore24.online/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Scrappbook Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://builder.scrappbook.de/*"],
      "js": ["exceljs.min.js", "jspdf.umd.min.js", "jspdf.plugin.autotable.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ]
}
